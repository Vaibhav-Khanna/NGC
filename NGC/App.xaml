<?xml version="1.0" encoding="utf-8"?>
<Application xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="NGC.App">
    <Application.Resources>
        <ResourceDictionary>
           
            <!--Global Styles-->
            <Color x:Key="NavigationPrimary">#181f31</Color>
            
            <Color x:Key="Primary">#181f31</Color>
            <Color x:Key="BottomTabText">#8e8e93</Color>
            <Color x:Key="BottomTabTextTint">#ff6565</Color>
            <Color x:Key="BottomTabBackground">#fafafa</Color>
           
            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="{StaticResource NavigationPrimary}" />
                <Setter Property="BarTextColor" Value="White" />
            </Style>
       
        </ResourceDictionary>
    </Application.Resources>    
</Application>